<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">

    <persistence-unit name="trasporto_pubblicopu">

        <class>team3.entities.Abbonamento</class>
        <class>team3.entities.Biglietto</class>
        <class>team3.entities.MezzoDiTrasporto</class>
        <class>team3.entities.Percorrenza</class>
        <class>team3.entities.PeriodoDiServizio</class>
        <class>team3.entities.PuntoVendita</class>
        <class>team3.entities.Tessera</class>
        <class>team3.entities.Tratta</class>
        <class>team3.entities.Utente</class>
        <class>team3.entities.Vidimazione</class>

        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/trasporto_pubblico"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="1234"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>

            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>